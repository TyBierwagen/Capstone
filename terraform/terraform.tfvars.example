# Example Terraform variables
# Copy this file to terraform.tfvars and update with your values

project_name     = "soilrobot"
environment      = "dev"
location         = "westus"
sql_admin_username = "capstoneadmin"
sql_admin_password = "CapstoneLogin.1$"  # IMPORTANT: Use a strong password in production

publisher_name  = "Soil Robot Team"
publisher_email = "tybierwagen@tamu.edu"

tags = {
  Project     = "Soil Sensing Robot"
  ManagedBy   = "Terraform"
  Environment = "Development"
}

# Azure Communication Services email settings
# Sender address (verified after domain is configured in ACS)
acs_sender_email    = "DoNotReply@tybierwagen.com"
# After adding domain in Azure, paste the verification token here.
# Example: acs_verification_token = "\"ms-domain-verification=YOUR_TOKEN\""
acs_verification_token = ""
# SPF TXT value. Use Azure recommended value if different.
acs_spf_value = "v=spf1 include:amazonses.com include:spf.protection.outlook.com -all"

acs_connection_string = ""